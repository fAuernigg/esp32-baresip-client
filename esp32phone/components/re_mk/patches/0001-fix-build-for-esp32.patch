+++ b/src/rtp/rtp.c
@@ -221,7 +221,7 @@ static int udp_range_listen(struct rtp_sock *rs, const struct sa *ip,
 	struct sa rtcp;
 	int tries = 64;
 	int err = 0;
-	uint16_t port;
+	uint16_t port = 0;
 	bool useRand = true;
 
 	rs->local = rtcp = *ip;
